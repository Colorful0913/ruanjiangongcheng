<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.manage.mapper.DormRoomMapper">
    
    <resultMap type="DormRoom" id="DormRoomResult">
        <result property="roomId"    column="room_id"    />
        <result property="buildingId"    column="building_id"    />
        <result property="roomNumber"    column="room_number"    />
        <result property="type"    column="type"    />
        <result property="currentCount"    column="current_count"    />
        <result property="maxCount"    column="max_count"    />
        <result property="status"    column="status"    />
        <result property="delFlag"    column="del_flag"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectDormRoomVo">
        select room_id, building_id, room_number, type, current_count, max_count, status, del_flag, create_by, create_time, update_by, update_time, remark from tb_dorm_room
    </sql>

    <select id="selectDormRoomList" parameterType="DormRoom" resultMap="DormRoomResult">
        <include refid="selectDormRoomVo"/>
        <where>  
            <if test="buildingId != null "> and building_id = #{buildingId}</if>
            <if test="roomNumber != null  and roomNumber != ''"> and room_number = #{roomNumber}</if>
            <if test="type != null  and type != ''"> and type = #{type}</if>
            <if test="currentCount != null "> and current_count = #{currentCount}</if>
            <if test="maxCount != null "> and max_count = #{maxCount}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectDormRoomByRoomId" parameterType="Long" resultMap="DormRoomResult">
        <include refid="selectDormRoomVo"/>
        where room_id = #{roomId}
    </select>

    <insert id="insertDormRoom" parameterType="DormRoom" useGeneratedKeys="true" keyProperty="roomId">
        insert into tb_dorm_room
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="buildingId != null">building_id,</if>
            <if test="roomNumber != null and roomNumber != ''">room_number,</if>
            <if test="type != null and type != ''">type,</if>
            <if test="currentCount != null">current_count,</if>
            <if test="maxCount != null">max_count,</if>
            <if test="status != null and status != ''">status,</if>
            <if test="delFlag != null and delFlag != ''">del_flag,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="buildingId != null">#{buildingId},</if>
            <if test="roomNumber != null and roomNumber != ''">#{roomNumber},</if>
            <if test="type != null and type != ''">#{type},</if>
            <if test="currentCount != null">#{currentCount},</if>
            <if test="maxCount != null">#{maxCount},</if>
            <if test="status != null and status != ''">#{status},</if>
            <if test="delFlag != null and delFlag != ''">#{delFlag},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateDormRoom" parameterType="DormRoom">
        update tb_dorm_room
        <trim prefix="SET" suffixOverrides=",">
            <if test="buildingId != null">building_id = #{buildingId},</if>
            <if test="roomNumber != null and roomNumber != ''">room_number = #{roomNumber},</if>
            <if test="type != null and type != ''">type = #{type},</if>
            <if test="currentCount != null">current_count = #{currentCount},</if>
            <if test="maxCount != null">max_count = #{maxCount},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="delFlag != null and delFlag != ''">del_flag = #{delFlag},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where room_id = #{roomId}
    </update>

    <delete id="deleteDormRoomByRoomId" parameterType="Long">
        delete from tb_dorm_room where room_id = #{roomId}
    </delete>

    <delete id="deleteDormRoomByRoomIds" parameterType="String">
        delete from tb_dorm_room where room_id in 
        <foreach item="roomId" collection="array" open="(" separator="," close=")">
            #{roomId}
        </foreach>
    </delete>
</mapper>