<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.manage.mapper.DormBuildingMapper">
    
    <resultMap type="DormBuilding" id="DormBuildingResult">
        <result property="buildingId"    column="building_id"    />
        <result property="buildingName"    column="building_name"    />
        <result property="buildingCode"    column="building_code"    />
        <result property="address"    column="address"    />
        <result property="adminId"    column="admin_id"    />
        <result property="contactPhone"    column="contact_phone"    />
        <result property="status"    column="status"    />
        <result property="delFlag"    column="del_flag"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectDormBuildingVo">
        select building_id, building_name, building_code, address, admin_id, contact_phone, status, del_flag, create_by, create_time, update_by, update_time, remark from tb_dorm_building
    </sql>

    <select id="selectDormBuildingList" parameterType="DormBuilding" resultMap="DormBuildingResult">
        <include refid="selectDormBuildingVo"/>
        <where>  
            <if test="buildingName != null  and buildingName != ''"> and building_name like concat('%', #{buildingName}, '%')</if>
            <if test="buildingCode != null  and buildingCode != ''"> and building_code = #{buildingCode}</if>
            <if test="address != null  and address != ''"> and address = #{address}</if>
            <if test="adminId != null "> and admin_id = #{adminId}</if>
            <if test="contactPhone != null  and contactPhone != ''"> and contact_phone = #{contactPhone}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectDormBuildingByBuildingId" parameterType="Long" resultMap="DormBuildingResult">
        <include refid="selectDormBuildingVo"/>
        where building_id = #{buildingId}
    </select>

    <select id="selectDormBuildingByBuildingCode" parameterType="String" resultMap="DormBuildingResult">
        <include refid="selectDormBuildingVo"/>
        where building_code = #{buildingCode}
    </select>



    <insert id="insertDormBuilding" parameterType="DormBuilding" useGeneratedKeys="true" keyProperty="buildingId">
        insert into tb_dorm_building
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="buildingName != null and buildingName != ''">building_name,</if>
            <if test="buildingCode != null and buildingCode != ''">building_code,</if>
            <if test="address != null">address,</if>
            <if test="adminId != null">admin_id,</if>
            <if test="contactPhone != null">contact_phone,</if>
            <if test="status != null and status != ''">status,</if>
            <if test="delFlag != null and delFlag != ''">del_flag,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="buildingName != null and buildingName != ''">#{buildingName},</if>
            <if test="buildingCode != null and buildingCode != ''">#{buildingCode},</if>
            <if test="address != null">#{address},</if>
            <if test="adminId != null">#{adminId},</if>
            <if test="contactPhone != null">#{contactPhone},</if>
            <if test="status != null and status != ''">#{status},</if>
            <if test="delFlag != null and delFlag != ''">#{delFlag},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateDormBuilding" parameterType="DormBuilding">
        update tb_dorm_building
        <trim prefix="SET" suffixOverrides=",">
            <if test="buildingName != null and buildingName != ''">building_name = #{buildingName},</if>
            <if test="buildingCode != null and buildingCode != ''">building_code = #{buildingCode},</if>
            <if test="address != null">address = #{address},</if>
            <if test="adminId != null">admin_id = #{adminId},</if>
            <if test="contactPhone != null">contact_phone = #{contactPhone},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="delFlag != null and delFlag != ''">del_flag = #{delFlag},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where building_id = #{buildingId}
    </update>

    <delete id="deleteDormBuildingByBuildingId" parameterType="Long">
        delete from tb_dorm_building where building_id = #{buildingId}
    </delete>

    <delete id="deleteDormBuildingByBuildingIds" parameterType="String">
        delete from tb_dorm_building where building_id in 
        <foreach item="buildingId" collection="array" open="(" separator="," close=")">
            #{buildingId}
        </foreach>
    </delete>
</mapper>